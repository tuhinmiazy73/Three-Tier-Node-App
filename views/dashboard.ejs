<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My TODO List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="text-center mb-4">üìù My TODO List</h2>
    <form class="d-flex mb-3" method="POST" action="/add">
      <input name="todo" class="form-control me-2" placeholder="Add new task..." required>
      <button class="btn btn-primary" type="submit">Add</button>
    </form>
    <ul class="list-group">
      <% todos.forEach(todo => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= todo.task %>
          <form method="POST" action="/delete" class="mb-0">
            <input type="hidden" name="id" value="<%= todo.id %>">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
    <a href="/change-password" class="btn btn-warning mt-3">Change Password</a>
    <a href="/logout" class="btn btn-outline-secondary mt-3">Logout</a>
  </div>
</body>
</html>
